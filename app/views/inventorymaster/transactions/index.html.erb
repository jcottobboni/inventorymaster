<p id="notice"><%= notice %></p>

<h1>Listing Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Date</th>
      <th>Location</th>
      <th>User</th>
      <th>Upc</th>
      <th>Unit cost</th>
      <th>Unit sale</th>
      <th>Ammount</th>
      <th>Average cost</th>
      <th>Reason</th>
      <th>Comment</th>
      <th>Serial number</th>
      <th>Transaction type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.kind %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.location_id %></td>
        <td><%= transaction.user_id %></td>
        <td><%= transaction.upc %></td>
        <td><%= transaction.unit_cost %></td>
        <td><%= transaction.unit_sale %></td>
        <td><%= transaction.ammount %></td>
        <td><%= transaction.average_cost %></td>
        <td><%= transaction.reason %></td>
        <td><%= transaction.comment %></td>
        <td><%= transaction.serial_number %></td>
        <td><%= transaction.transaction_type_id %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

