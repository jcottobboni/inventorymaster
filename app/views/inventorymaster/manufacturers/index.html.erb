 <div class="page-header">
  <h3><span class="glyphicon glyphicon-users"></span> Fabricante</h3>
</div>
<div align="right"><%= link_to 'Inserir Fabricante', new_manufacturer_path ,:class=>"btn btn-primary"%></div>
<br>
<div class="table-responsive">
<table class="table table-condesed">
  <thead>
    <tr>
      <th>Nome</th>
      <th>CNPJ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.name %></td>
        <td><%= manufacturer.cnpj %></td>
        <td><%= link_to 'Detalhar', manufacturer ,:class=>"btn btn-xs btn-default"%></td>
        <td><%= link_to 'Editar', edit_manufacturer_path(manufacturer) ,:class=>"btn btn-xs btn-warning"%></td>
        <td><%= link_to 'Deletar', manufacturer, method: :delete, data: { confirm: 'Tem certeza?' },:class=>"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

